# Stalonetray configuration
#   Penn Bauman <me@pennbauman.com>
#   https://github.com/pennbauman/dotfiles

# background <color>
background "#000000"

# geometry <geometry>
#   width and height are specified in slot_size multiples
geometry 1x1-5+0
# icon_size <int>
icon_size 50
# grow_gravity <N|S|E|W|NW|NE|SW|SE>
#   tray will grow in the direction opposite to one specified
grow_gravity NE

# log_level <err|info|trace>
log_level err

# sticky <bool>
#   make tray stay across desktops/pages
sticky true
# window_layer <bottom|normal|top>
window_layer top
# window_type <desktop|dock|normal|toolbar|utility>
window_type utility
