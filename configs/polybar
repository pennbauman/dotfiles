label = %percentage:02%%
;
ramp-load-0 = %{F#2EB398}%{F}
ramp-load-1 = %{F#2EB398}%{F}
ramp-load-2 = %{F#2EB398}%{F}
ramp-load-3 = %{F#2EB398}%{F}
ramp-load-4 = %{F#DB5B5B}%{F}

[module/memory]
type = internal/memory
interval = 5
format = %{A:bash /home/penn/.bin/system-notify.sh disk:}<ramp-used><label>%{A}
label = %percentage_used:02%% %percentage_swap_used:02%%
;
ramp-used-0 = %{F#2EB398}%{F}
ramp-used-1 = %{F#2EB398}%{F}
ramp-used-2 = %{F#2EB398}%{F}
ramp-used-3 = %{F#2EB398}%{F}
ramp-used-4 = %{F#DB5B5B}%{F}

[module/storage]
type = internal/fs
module-margin = 0
mount-0 = /imaginary
mount-1 = /
mount-2 = /home/penn/Storage
spacing = 1
;
format-mounted = <label-mounted>
format-unmounted = %{F#2EB398}%{F} 
label-mounted = %percentage_used%% 

[module/volume]
type = custom/script
interval = 1
label = %output%
exec = ~/.bin/volume.sh
;exec-if = [ -p /tmp/.xmonad-workspace-log ]
tail = true
scroll-up = pamixer --decrease 5 --allow-boost 
scroll-down = pamixer --increase 5 --allow-boost 

[module/wireless]
type = custom/script
interval = 1
label = %{A:bash /home/penn/.bin/system-notify.sh network:}%output%%{A}
exec = conky -c $HOME/.bin/polybar-net-conky
tail = true

[module/wireless-short]
type = custom/script
interval = 1
label = %output%
exec = conky -c $HOME/.bin/polybar-net-conky-short
tail = true

[module/updates]
type = custom/script
interval = 120
label = %output%
exec = echo "%{A:termite --title="float" -e "yay":}%{F#DB5B5B}%{F}$(yay -Qu | wc -l) %{A}"
exec-if = [[ $(yay -Qu | wc -l) != 0 ]]
tail = true

