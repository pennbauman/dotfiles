; LEFT MODULES
[module/i3ws]
type = internal/i3
;         
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;ﱨ
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;
;
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = true
pin-workspaces = true
;
label-mode-foreground = ${colors.primary}
label-mode-background = ${colors.background}
;
label-focused = %icon%
label-focused-foreground = ${colors.secondary}
label-focused-underline = ${colors.secondary}
;
label-unfocused = %icon%
label-visible = %icon%
;
label-urgent = %icon%
label-urgent-foreground = ${colors.alert}
label-urgent-underline = ${colors.alert}
;
label-separator = ||
label-separator-foreground = ${colors.background}

[module/mpd]
type = internal/mpd
format-offline = 
format-online = <label-song> 
format-online-padding = 2
label-song = %title% - %artist%
;label-song-maxlen = 45
label-song-maxlen = 41

[module/title]
type = internal/xwindow
format = <label>
label = %title%
label-maxlen = 50

[module/hdmi]
type = custom/script
interval = 0
label = %output%
exec = echo "HDMI"

; CENTER MODULE
[module/datetime]
type = internal/date
interval = 1
time = "%a %Y-%m-%d %H:%M:%S"
format-underline = ${colors.secondary}
label = %time%

[module/weather]
type = custom/script
interval = 100
label = %output%
exec = bash ~/.bin/darksky-weather.sh bar


; RIGHT MODULES
[module/pgmr]
type = custom/script
interval = 3600
;label = %{A:pgrm:}A%{A}
label = %output%
;
exec = echo "%{A:termite --title="float" -e "pgmr":}%{F#2EB398}%{F}%{A}"
tail = true

[module/battery]
type = internal/battery
interval = 5
battery = BAT0
adapter = ADP1
full-at = 100
; 
format-full = %{F#2EB398}%{F}<label-full>
label-full = %percentage:02%%
;
format-discharging = <ramp-capacity><label-discharging>
label-discharging = %percentage:02%%
;
format-charging = %{F#2EB398}%{F}<label-charging>
; <ramp-capacity>
label-charging = %percentage:02%% 
;
ramp-capacity-0 = %{F#DB5B5B}%{F}
ramp-capacity-1 = %{F#DB5B5B}%{F}
ramp-capacity-2 = %{F#DB5B5B}%{F}
ramp-capacity-3 = %{F#2EB398}%{F}
ramp-capacity-4 = %{F#2EB398}%{F}
ramp-capacity-5 = %{F#2EB398}%{F}
ramp-capacity-6 = %{F#2EB398}%{F}
ramp-capacity-7 = %{F#2EB398}%{F}
ramp-capacity-8 = %{F#2EB398}%{F}
ramp-capacity-9 = %{F#2EB398}%{F}

[module/cpu]
type = internal/cpu
