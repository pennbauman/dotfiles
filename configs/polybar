; LEFT MODULES
[module/i3ws]
type = internal/i3
;
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;ﱨ
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;
;
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = true
pin-workspaces = true
;
label-mode-foreground = ${colors.primary}
label-mode-background = ${colors.background}
;
label-focused = %icon%
label-focused-foreground = ${colors.secondary}
label-focused-underline = ${colors.secondary}
;
label-unfocused = %icon%
label-visible = %icon%
;
label-urgent = %icon%
label-urgent-foreground = ${colors.alert}
label-urgent-underline = ${colors.alert}
;
label-separator = ||
label-separator-foreground = ${colors.background}

[module/mpd]
type = internal/mpd
format-offline = 
format-online = <label-song> 
format-online-padding = 2
label-song = %title% - %artist%
;label-song-maxlen = 45
label-song-maxlen = 41

[module/title]
type = internal/xwindow
format = <label>
label = %title%
label-maxlen = 50

[module/hdmi]
type = custom/script
interval = 0
label = %output%
exec = echo HDMI %{A:termite -t hdmi -c $HOME/.i3-config/configs/termite-1080p:}termite%{A} %{A:termite -t hdmi -d $HOME/videos -c $HOME/.i3-config/configs/termite-1080p -e ranger:}ranger%{A}

; CENTER MODULE
[module/datetime]
type = internal/date
interval = 1
time = "%a %Y-%m-%d %H:%M:%S"
format-underline = ${colors.secondary}
label = %time%

[module/weather]
type = custom/script
interval = 100
label = %output%
exec = bash ~/.bin/darksky-weather.sh bar


; RIGHT MODULES
[module/transmission]
type = custom/script
interval = 5
;label = %{A:pgrm:}A%{A}
label = %output%
;
exec = echo "%{A:bash ~/storage/torrents/.control/switch.sh toggle:}$(cat ~/storage/torrents/.control/status)%{A}"
tail = true

[module/battery]
type = internal/battery
interval = 5
battery = BAT0
adapter = ADP1
full-at = 100
; 
format-full = %{F#2EB398}%{F}<label-full>
label-full = %percentage:02%%
;
format-discharging = <ramp-capacity><label-discharging>
label-discharging = %percentage:02%%
;
format-charging = %{F#2EB398}%{F}<label-charging>
; <ramp-capacity>
label-charging = %percentage:02%% 
;
ramp-capacity-0 = %{F#DB5B5B}%{F}
ramp-capacity-1 = %{F#DB5B5B}%{F}
ramp-capacity-2 = %{F#DB5B5B}%{F}
ramp-capacity-3 = %{F#2EB398}%{F}
ramp-capacity-4 = %{F#2EB398}%{F}
ramp-capacity-5 = %{F#2EB398}%{F}
ramp-capacity-6 = %{F#2EB398}%{F}
ramp-capacity-7 = %{F#2EB398}%{F}
ramp-capacity-8 = %{F#2EB398}%{F}
ramp-capacity-9 = %{F#2EB398}%{F}

[module/cpu]
type = internal/cpu
interval = 1
format = <ramp-load><label>
label = %percentage:02%%
;
ramp-load-0 = %{F#2EB398}%{F}
ramp-load-1 = %{F#2EB398}%{F}
ramp-load-2 = %{F#2EB398}%{F}
ramp-load-3 = %{F#2EB398}%{F}
ramp-load-4 = %{F#DB5B5B}%{F}

[module/memory]
type = internal/memory
interval = 5
format = %{A:bash /home/penn/.bin/system-notify.sh disk:}<ramp-used><label>%{A}
label = %percentage_used:02%% %percentage_swap_used:02%%
;
ramp-used-0 = %{F#2EB398}%{F}
ramp-used-1 = %{F#2EB398}%{F}
ramp-used-2 = %{F#2EB398}%{F}
ramp-used-3 = %{F#2EB398}%{F}
ramp-used-4 = %{F#DB5B5B}%{F}

[module/storage]
type = internal/fs
module-margin = 0
mount-0 = /imaginary
mount-1 = /
mount-2 = /home/penn/Storage
spacing = 1
;
format-mounted = <label-mounted>
format-unmounted = %{F#2EB398}%{F} 
label-mounted = %percentage_used%% 

[module/volume]
type = custom/script
interval = 1
label = %output%
exec = ~/.bin/volume.sh
;exec-if = [ -p /tmp/.xmonad-workspace-log ]
tail = true
scroll-up = pamixer --decrease 5 --allow-boost 
scroll-down = pamixer --increase 5 --allow-boost 

[module/network-x570-2020]
