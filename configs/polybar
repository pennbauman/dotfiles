[module/updates-yay]
type = custom/script
interval = 120
label = %output%
exec = echo "%{A:termite --title="float" -e "yay":}%{F#DB5B5B}%{F}$(yay -Qu | wc -l) %{A}"
exec-if = [[ $(yay -Qu | wc -l) != 0 ]]
tail = true

[module/updates-dnf]
type = custom/script
interval = 120
label = %output%
exec = echo "%{F#DB5B5B}%{F}"
exec-if = dnf check-update; [ $? -eq 100 ]
tail = true
