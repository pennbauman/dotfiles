default_border none
for_window [floating] border pixel 4
# added borders for certain windows
for_window [class="Gimp-2.10"] border normal
# windows floating by default
for_window [class="Gnome-calculator"] floating enable
for_window [class="Termite" title="calc"] floating enable
for_window [class="Termite" title="float"] floating enable
