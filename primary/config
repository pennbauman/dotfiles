### WINDOWS ARRANGEMENT
## General Window Controls
# Change focused Window
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
# Change focused Window
bindsym $mod+$left-wasd focus left
bindsym $mod+$down-wasd focus down
bindsym $mod+$up-wasd focus up
bindsym $mod+$right-wasd focus right
# Change focused Window
bindsym $mod+$left-vi focus left
bindsym $mod+$down-vi focus down
bindsym $mod+$up-vi focus up
bindsym $mod+$right-vi focus right
# Move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
# Move focused window
bindsym $mod+Shift+$left-wasd move left
bindsym $mod+Shift+$down-wasd move down
bindsym $mod+Shift+$up-wasd move up
bindsym $mod+Shift+$right-wasd move right
# Move focused window
bindsym $mod+Shift+$left-vi move left
bindsym $mod+Shift+$down-vi move down
bindsym $mod+Shift+$up-vi move up
bindsym $mod+Shift+$right-vi move right
# toggle split  orientation
bindsym $mod+v split toggle
# container layout
bindsym $mod+t layout toggle tabbed split
# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# kill focused window
bindsym $mod+Shift+q kill

## Scratchpad
# move the currently focused window to the scratchpad
bindcode $mod+Shift+49 move scratchpad
# Show the next scratchpad window or hide the focused scratchpad window.
bindcode $mod+49 scratchpad show

## Resizing windows
bindsym $mod+r mode "resize"
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        # arrow large
        bindsym Left        resize shrink width 100 px or 10 ppt
        bindsym Down        resize grow height 100 px or 10 ppt
        bindsym Up          resize shrink height 100 px or 10 ppt
        bindsym Right       resize grow width 100 px or 150 ppt
        # letter large
        bindsym $left-wasd   resize shrink width 100 px or 10 ppt
        bindsym $down-wasd   resize grow height 100 px or 10 ppt
        bindsym $up-wasd     resize shrink height 100 px or 10 ppt
        bindsym $right-wasd  resize grow width 100 px or 10 ppt
        # letter large
        bindsym $left-vi   resize shrink width 100 px or 10 ppt
        bindsym $down-vi   resize grow height 100 px or 10 ppt
        bindsym $up-vi     resize shrink height 100 px or 10 ppt
        bindsym $right-vi  resize grow width 100 px or 10 ppt
        # arrow small
        bindsym Shift+Left        resize shrink width 10 px or 10 ppt
        bindsym Shift+Down        resize grow height 10 px or 10 ppt
        bindsym Shift+Up          resize shrink height 10 px or 10 ppt
        bindsym Shift+Right       resize grow width 10 px or 10 ppt
        # letter small
        bindsym Shift+$left-wasd   resize shrink width 10 px or 10 ppt
        bindsym Shift+$down-wasd   resize grow height 10 px or 10 ppt
        bindsym Shift+$up-wasd     resize shrink height 10 px or 10 ppt
        bindsym Shift+$right-wasd  resize grow width 10 px or 10 ppt
        # letter small
        bindsym Shift+$left-vi   resize shrink width 10 px or 10 ppt
        bindsym Shift+$down-vi   resize grow height 10 px or 10 ppt
        bindsym Shift+$up-vi     resize shrink height 10 px or 10 ppt
        bindsym Shift+$right-vi  resize grow width 10 px or 10 ppt
        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}



### KEYBOARD SHORTCUTS
## Program Launching
bindsym $mod+space exec rofi --enable-drun -show drun
# start terminal
bindsym $mod+Return exec $term
# start calculator
bindsym $mod+c exec $term --title="float" -e "calc -i read $loc/configs/val.cal"
# Custom program runner
bindsym $mod+x exec $term --title="float" -e "pgmr"

## System buttons
# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec pamixer --increase 5 --allow-boost 
bindsym XF86AudioLowerVolume exec pamixer --decrease 5 --allow-boost 
bindsym XF86AudioMute exec pamixer --set-volume 0
# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10.0 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10.0 # decrease screen brightness
bindcode 167 exec xbacklight -inc 10.0
bindcode 166 exec xbacklight -dec 10.0
# Media player controls
bindsym XF86AudioPlay exec mpc toggle
bindsym XF86AudioNext exec mpc next
bindsym XF86AudioPrev exec mpc prev
# Special character selector
bindcode 66 exec $term --title="float" -e "bash $loc/scripts/char-select.sh"

## i3 Control
# Restart i3
bindsym $mod+Shift+Escape restart
# Exit i3
#bindsym $mod+Escape exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+Escape exec $term --title="float" -e "bash $loc/scripts/i3exit.sh"
# Lock i3
bindsym $mod+z exec bash $loc/scripts/i3locker.sh dark
# Screenshots
bindsym Print exec scrot '%Y-%m-%d_%H:%M:%S_$wx$h_scrot.png' -e 'mv $f ~/Pictures/'
bindsym Control+Print exec scrot '%Y-%m-%d_%H:%M:%S_$wx$h_scrot.png' -e 'mv $f ~/Pictures/' -s

## Folder Opening
# Open ~/
bindsym $mod+f exec $term -e "ranger $HOME/ $HOME/Storage/"
# Open /
bindsym $mod+Shift+r exec $term -e "ranger / /"
# Open 5e Rule Books
bindsym $mod+Shift+b exec $term -e "ranger $HOME/Storage/dnd/5e-books/ $HOME/Storage/dnd/"
# Open pCloud Drive
bindsym $mod+Shift+c exec $term -e "ranger $HOME/pCloudDrive/ $HOME/Storage/"
# Open Git Folder
bindsym $mod+Shift+g exec $term -e "ranger $HOME/Storage/git/ $HOME/Storage/"
# Open Site
bindsym $mod+Shift+v exec $term -e "ranger $HOME/Storage/site/ $HOME/Storage/"
# Open Storage
bindsym $mod+Shift+f exec $term -e "ranger $HOME/Storage/ $HOME/Storage/"
# Open College Folder
bindsym $mod+Shift+e exec $term -e "ranger $HOME/Storage/college/ $HOME/Storage/"



### STARTUP PROGRAMS
## Run on i3 Startup
exec $term
exec $term
exec $term --title="scratch"
exec firefox
exec compton -f --shadow-opacity=0
exec --no-startup-id xautolock -time 9 -notify 60 -notifier 'bash $loc/scripts/pre-i3lock.sh' -locker 'bash $loc/scripts/i3locker.sh auto' 
exec --no-startup-id /usr/lib/geoclue-2.0/demos/agent
exec --no-startup-id redshift
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 & eval $(gnome-keyring-daemon -s --components=pkcs11,secrets,ssh,gpg) &
exec dunst
exec systemctl start bluetooth.service
exec --no-startup-id /usr/lib/kdeconnectd
exec pcloudcc -u "pennbauman@protonmail.com" -d
exec bash $loc/scripts/window-file-clear.sh
exec bash $loc/scripts/ncmpcpp-start.sh $term
exec bash /home/penn/Storage/torrents/.control/start.sh
# wifi setup
exec nmcli con up Bakuman-5G
exec nmcli con up wahoo

## Run on i3 Restart
exec_always feh --bg-scale $loc/primary/background.jpg
