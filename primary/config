set $c-high-n   #2EB398
set $c-high-b   #DB5B5B
# mod key
set $mod Mod4
# default programs
set $term termite
# wasd arrow keys
set $left-wasd a
set $down-wasd s
set $up-wasd w
set $right-wasd d
# vi arrow keys
set $left-vi h
set $down-vi j
set $up-vi k
set $right-vi l
# config location
set $loc "/home/penn/Storage/linux/i3-config"


### APPEARANCE
## Fonts
font pango:Monospace, "Material Design Icons", pango:EmojiOne Color 10

## Window Colors
#                        border      background   text       indicator
