### WINDOWS ARRANGEMENT
## General Window Controls
# Change focused Window
bindsym $mod+$left-vi focus left
bindsym $mod+$down-vi focus down
bindsym $mod+$up-vi focus up
bindsym $mod+$right-vi focus right
# Change focused Window
bindsym $mod+Tab focus right
bindsym $mod+Shift+Tab focus left
# Move focused window
bindsym $mod+Shift+$left-vi move left
bindsym $mod+Shift+$down-vi move down
bindsym $mod+Shift+$up-vi move up
bindsym $mod+Shift+$right-vi move right
# toggle split  orientation
bindsym $mod+v split toggle
# container layout
bindsym $mod+t layout toggle tabbed split
# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# kill focused window
bindsym $mod+Shift+q kill

## Scratchpad
# move the currently focused window to the scratchpad
bindcode $mod+Shift+49 move scratchpad
# Show the next scratchpad window or hide the focused scratchpad window.
bindcode $mod+49 scratchpad show

## Resizing windows
bindsym $mod+r mode "resize"
mode "resize" {
	# Large
	bindsym $left-vi   resize shrink width 100 px or 10 ppt
	bindsym $down-vi   resize grow height 100 px or 10 ppt
	bindsym $up-vi     resize shrink height 100 px or 10 ppt
	bindsym $right-vi  resize grow width 100 px or 10 ppt
	# Small
	bindsym Shift+$left-vi   resize shrink width 10 px or 10 ppt
	bindsym Shift+$down-vi   resize grow height 10 px or 10 ppt
	bindsym Shift+$up-vi     resize shrink height 10 px or 10 ppt
	bindsym Shift+$right-vi  resize grow width 10 px or 10 ppt
	# back to normal: Enter or Escape or $mod+r
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym $mod+r mode "default"
}



### KEYBOARD SHORTCUTS
## Program Launching
bindsym $mod+space exec rofi --enable-drun -show drun
# start terminal
bindsym $mod+Return exec $term
# start calculator
bindsym $mod+c exec $term --title="float" -e "calc -i read $loc/configs/val.cal"
# Custom program runner
bindsym $mod+x exec $term --title="float" -e "bash $HOME/Storage/linux/scripts/quick-run.sh"

## System buttons
# Volume controls
bindsym XF86AudioRaiseVolume exec pamixer --increase 5 --allow-boost --unmute
bindsym XF86AudioLowerVolume exec pamixer --decrease 5 --allow-boost --unmute
bindsym XF86AudioMute exec pamixer --toggle-mute
#
bindsym $mod+Up exec pamixer --increase 5 --allow-boost --unmute
bindsym $mod+Down exec pamixer --decrease 5 --allow-boost --unmute
bindsym $mod+Shift+Up exec pamixer --increase 2 --allow-boost --unmute
bindsym $mod+Shift+Down exec pamixer --decrease 2 --allow-boost --unmute
bindsym $mod+Delete exec pamixer --toggle-mute
# Media controls
bindsym XF86AudioPlay exec mpc toggle
bindsym XF86AudioNext exec mpc next
bindsym XF86AudioPrev exec mpc prev
#
bindsym Pause exec mpc toggle
bindsym $mod+Left exec mpc prev
bindsym $mod+Right exec mpc next
bindsym $mod+Shift+Left exec mpc seek +0:0:10
bindsym $mod+Shift+Right exec mpc seek -0:0:10
# Screen brightness controls
bindsym XF86MonBrightnessUp exec bash $loc/scripts/backlight.sh +
bindsym XF86MonBrightnessDown exec bash $loc/scripts/backlight.sh -
bindsym $mod+Prior exec bash $loc/scripts/backlight.sh +
bindsym $mod+Next exec bash $loc/scripts/backlight.sh -

## i3 Control
# Restart i3
bindsym $mod+Shift+Escape restart
# Exit i3
bindsym $mod+Escape exec $term --title="float" -e "bash $loc/scripts/i3exit.sh"
# Lock i3
bindsym $mod+z exec bash $loc/scripts/i3locker.sh dark
# Screenshots
bindsym Print exec scrot '%Y-%m-%d_%H:%M:%S_$wx$h_scrot.png' -e 'mv $f ~/Pictures/'
bindsym Control+Print exec scrot '%Y-%m-%d_%H:%M:%S_$wx$h_scrot.png' -e 'mv $f ~/Pictures/' -s

## Folder Opening
# Open ~/
bindsym $mod+f exec $term -e "ranger $HOME/ $HOME/Storage/ $HOME/Storage"
# Open ~/Downloads
bindsym $mod+d exec $term -e "ranger $HOME/Downloads/ $HOME/Storage/ $HOME/Storage"
# Open /
bindsym $mod+Shift+r exec $term -e "ranger / / $HOME/Storage"
# Open D&D
bindsym $mod+Shift+d exec $term -e "ranger $HOME/Storage/dnd/ $HOME/Storage/dnd/5e-books/ $HOME/Storage"
# Open 5e Rule Books
bindsym $mod+Shift+b exec $term -e "ranger $HOME/Storage/dnd/5e-books/ $HOME/Storage/dnd/ $HOME/Storage"
# Open pCloud Drive
bindsym $mod+Shift+c exec $term -e "ranger $HOME/pCloudDrive/ $HOME/Storage/ $HOME/Storage"
# Open Site
bindsym $mod+Shift+v exec $term -e "ranger $HOME/Storage/site/ $HOME/Storage/ $HOME/Storage"
# Open Storage
bindsym $mod+Shift+f exec $term -e "ranger $HOME/Storage/ $HOME/Storage/ $HOME/Storage"
# Open College Folder
bindsym $mod+Shift+e exec $term -e "ranger $HOME/Storage/college/ $HOME/Storage/ $HOME/Storage"


### STARTUP PROGRAMS
## Run on i3 Startup
exec $term
exec $term
exec $term --title="scratch"
exec firefox
exec compton -f --shadow-opacity=0
exec --no-startup-id xautolock -time 9 -notify 60 -notifier 'bash $loc/scripts/pre-i3lock.sh' -locker 'bash $loc/scripts/i3locker.sh auto'
exec --no-startup-id /usr/lib/geoclue-2.0/demos/agent
exec --no-startup-id redshift
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 & eval $(gnome-keyring-daemon -s --components=pkcs11,secrets,ssh,gpg) &
exec dunst
exec systemctl start bluetooth.service
exec --no-startup-id /usr/lib/kdeconnectd
exec pcloudcc -u "pennbauman@protonmail.com" -d
exec syndaemon -i 1 -t -K -R -d
exec rm -rf /home/penn/Storage/\$RECYCLE.BIN/
exec rm -rf /home/penn/Storage/System\ Volume\ Information/
exec bash $loc/scripts/ncmpcpp-start.sh $term
exec bash /home/penn/Storage/torrents/.control/start.sh
# wifi setup
exec sleep 5 && nmcli con up "Bakuman-5G"
exec sleep 5 && nmcli con up "wahoo"
exec sleep 5 && ncmli con up "Grandmarc Wireless"

## Run on i3 Restart
exec_always feh --bg-scale $loc/primary/background.jpg
exec_always xrandr --output HDMI1 --auto --right-of eDP1
exec_always xrandr --output DP2 --auto --right-of eDP1
