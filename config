### VARIABLES
# colors (matcha-dark-sea)
set $c-backgnd  #141A1B
set $c-text     #EEEEEE
set $c-high-n   #2EB398
set $c-high-b   #DB5B5B
# mod key
set $mod Mod4
# default programs
set $term termite
#set $file thunar
set $file pcmanfm -n
set $left-key a
set $down-key s
set $up-key w
set $right-key d



### APPEARANCE
## Fonts
# for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Monospace, pango:FontAwesome, pango:EmojiOne Color 10
# DejaVu Sans Mono is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).

## Window Colors
#                        border      background   text       indicator
client.focused           $c-backgnd  $c-backgnd   $c-high-n  $c-high-n
client.unfocused         $c-backgnd  $c-backgnd   $c-text    $c-high-n
client.focused_inactive  $c-backgnd  $c-backgnd   $c-high-n  $c-high-n
client.urgent            $c-backgnd  $c-backgnd   $c-high-b  $c-high-n

## Windows Borders
# hide border by default
new_window pixel 0
default_border none
for_window [floating] border pixel 4
# added borders for certain windows
for_window [class="Gimp-2.10"] border normal
# windows floating by default
for_window [class="Gnome-calculator"] floating enable
for_window [class="Termite" title="calc"] floating enable
for_window [class="Termite" title="termite scratch"] floating enable
# set non-primary matlab windows to floating
for_window [instance="sun-awt-X11-XFramePeer"] floating enable
for_window [instance="sun-awt-X11-XFramePeer"] border normal
for_window [title="MATLAB R2018b - academic use"] floating disable
for_window [title="MATLAB R2018b - academic use"] border none

## Bar
#exec_always --no-startup-id bash polybar-start.sh
bar {
    status_command bash /home/penn/.i3/scripts/conky-wrap.sh
    font pango:Monospace, pango:FontAwesome 10
	position top
	colors {
		background	$c-backgnd
	    separator	$c-backgnd
		#                    border		 background   text
		focused_workspace    $c-backgnd  $c-backgnd   $c-high-n
        inactive_workspace   $c-backgnd  $c-backgnd   $c-text
        urgent_workspace     $c-backgnd  $c-backgnd   $c-high-b
	}
}

