### WINDOWS ARRANGEMENT
## General Window Controls
# Change focused Window
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
# Change focused Window
bindsym $mod+$left-key focus left
bindsym $mod+$down-key focus down
bindsym $mod+$up-key focus up
bindsym $mod+$right-key focus right
# Move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
# Move focused window
bindsym $mod+Shift+$left-key move left
bindsym $mod+Shift+$down-key move down
bindsym $mod+Shift+$up-key move up
bindsym $mod+Shift+$right-key move right
# toggle split  orientation
bindsym $mod+v split toggle
# container layout
bindsym $mod+t layout toggle tabbed split
# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# kill focused window
bindsym $mod+Shift+q kill

## Scratchpad
# move the currently focused window to the scratchpad
bindcode $mod+Shift+49 move scratchpad
# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindcode $mod+49 scratchpad show

## Resizing windows
# resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        # arrow large
        bindsym Left        resize shrink width 100 px or 10 ppt
        bindsym Down        resize grow height 100 px or 10 ppt
        bindsym Up          resize shrink height 100 px or 10 ppt
        bindsym Right       resize grow width 100 px or 150 ppt
        # letter large
        bindsym $left-key   resize shrink width 100 px or 10 ppt
        bindsym $down-key   resize grow height 100 px or 10 ppt
        bindsym $up-key     resize shrink height 10 px or 10 ppt
        bindsym $right-key  resize grow width 100 px or 10 ppt
        # arrow small
        bindsym Shift+Left        resize shrink width 10 px or 10 ppt
        bindsym Shift+Down        resize grow height 10 px or 10 ppt
        bindsym Shift+Up          resize shrink height 10 px or 10 ppt
        bindsym Shift+Right       resize grow width 10 px or 10 ppt
        # letter small
        bindsym Shift+$left-key   resize shrink width 10 px or 10 ppt
        bindsym Shift+$down-key   resize grow height 10 px or 10 ppt
        bindsym Shift+$up-key     resize shrink height 10 px or 10 ppt
        bindsym Shift+$right-key  resize grow width 10 px or 10 ppt
        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}



### KEYBOARD SHORTCUTS
## Program Launching
#bindsym $mod+space exec dmenu_run
bindsym $mod+space exec rofi --enable-drun -show drun
# start terminal
bindsym $mod+Return exec $term
# start calculator
#bindsym $mod+c exec gnome-calculator
#bindsym $mod+c exec "termite && xdotool getactivewindow set_window --name uniquetitle"
bindsym $mod+c exec termite --name="termite calc" -e calc

## System buttons
# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-volume 0 0 # mute sound
# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10.0 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10.0 # decrease screen brightness
# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

## i3 Control
# Restart i3
bindsym $mod+Shift+Escape restart
# Exit i3
bindsym $mod+Escape exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
# Lock i3
bindsym $mod+l exec bash ~/.i3/scripts/i3locker.sh dark
# Screenshots
bindsym Print exec scrot '%Y-%m-%d_%H:%M:%S_$wx$h_scrot.png' -e 'mv $f ~/Pictures/'
bindsym Control+Print exec scrot '%Y-%m-%d_%H:%M:%S_$wx$h_scrot.png' -e 'mv $f ~/Pictures/' -s

## Folder Opening
# Open ~/
bindsym $mod+f exec $file
# Open /
bindsym $mod+Shift+r exec $file /
# Open 5e Rule Books
bindsym $mod+Shift+b exec $file /home/penn/Storage/D\&D/5e\ Rule\ Books/
# Open pCloud Drive
bindsym $mod+Shift+p exec $file /home/penn/pCloudDrive/
# Open Git Folder
bindsym $mod+Shift+g exec $file /home/penn/Storage/Git/
# Open Site
bindsym $mod+Shift+v exec $file /home/penn/Storage/Site/
# Open Storage
bindsym $mod+Shift+f exec $file /home/penn/Storage
# Open College Folder
bindsym $mod+Shift+e exec $file /home/penn/Storage/College/



